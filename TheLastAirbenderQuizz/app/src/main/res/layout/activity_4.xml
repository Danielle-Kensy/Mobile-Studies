<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4"
    android:background="@color/orange100">

    <TextView
        android:id="@+id/activity4TextViewScore"
        style="@style/button_text"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/momo"/>

    <TextView
        android:id="@+id/activity4TextViewDescription"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:padding="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <RadioGroup
        android:id="@+id/activity4RadioGroup"
        android:layout_width="294dp"
        android:layout_height="107dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_style"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity4TextViewDescription">

        <RadioButton
            android:id="@+id/activity4RadioGroupOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_text"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/activity4RadioGroupOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_text"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/activity4RadioGroupOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_text"
            android:text="RadioButton" />
    </RadioGroup>

    <Button
        android:id="@+id/activity4ButtonAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/button_style"
        style="@style/button_text"
        android:text="@string/button_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity4RadioGroup" />

    <Button
        android:id="@+id/activity4ButtonNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/button_style"
        style="@style/button_text"
        android:text="@string/button_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity4ButtonAnswer" />

</androidx.constraintlayout.widget.ConstraintLayout>