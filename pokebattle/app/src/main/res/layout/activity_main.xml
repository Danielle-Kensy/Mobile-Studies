<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgtwo">

    <Button
        android:id="@+id/button_dragonthree"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drathree"
        app:layout_constraintStart_toEndOf="@+id/button_dragontwo"
        app:layout_constraintTop_toBottomOf="@+id/button_bulbathree" />

    <Button
        android:id="@+id/button_dragontwo"
        android:layout_width="98dp"
        android:layout_height="89dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/dratwo"
        app:layout_constraintStart_toEndOf="@+id/button_dragon"
        app:layout_constraintTop_toBottomOf="@+id/button_bulbatwo" />

    <Button
        android:id="@+id/button_tutuga"
        android:layout_width="85dp"
        android:layout_height="71dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/tutugaone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="204dp"
        android:layout_height="223dp"
        android:background="@drawable/poke_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805" />

    <Button
        android:id="@+id/button_bulba"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bubaone"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/button_tutuga" />

    <Button
        android:id="@+id/button_bulbatwo"
        android:layout_width="103dp"
        android:layout_height="84dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bubatwo"
        app:layout_constraintStart_toEndOf="@+id/button_bulba"
        app:layout_constraintTop_toBottomOf="@+id/button_tutugatwo" />

    <Button
        android:id="@+id/button_tutugathree"
        android:layout_width="104dp"
        android:layout_height="105dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tutugathree"
        app:layout_constraintStart_toEndOf="@+id/button_tutugatwo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_dragon"
        android:layout_width="80dp"
        android:layout_height="74dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/darone"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/button_bulba" />

    <Button
        android:id="@+id/button_tutugatwo"
        android:layout_width="103dp"
        android:layout_height="97dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/tutugatwo"
        app:layout_constraintStart_toEndOf="@+id/button_tutuga"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_bulbathree"
        android:layout_width="97dp"
        android:layout_height="92dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bubathree"
        app:layout_constraintStart_toEndOf="@+id/button_bulbatwo"
        app:layout_constraintTop_toBottomOf="@+id/button_tutugathree" />

    <Button
        android:id="@+id/button10"
        android:layout_width="179dp"
        android:layout_height="118dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/poke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>